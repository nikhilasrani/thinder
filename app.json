{
  "expo": {
    "name": "Thinder",
    "slug": "Thinder",
    "privacy": "public",
    "platforms": ["ios", "android"],
    "version": "3.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "facebookScheme": "fb702499076835455",
    "permissions":[],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ff5555"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.nikhilasrani.thinder",
      "versionCode": 3
    },
    "description": "Thinder is an app that combines a Tinder-like interface with Zomato's API capabilities to search for restaurants nearby and help you make that food decision much easier.",
    "githubUrl": "https://github.com/nikhilasrani/thinder",
    "ios": {
      "infoPlist":{
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      }
    }
  }
}
